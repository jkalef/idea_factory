<!DOCTYPE html>
<html>
<head>
  <title>IdeaFactory</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">
      <br>
      <%= link_to "All Ideas", root_path %>
      <%#--only if the user is signed in----------------------------------------------%>
      <% if user_signed_in? %>
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, style: "float: right" %> 
            <span style="float: right">Hello <%= current_user.first_name %> | </span>
      <% end %>
      <br>

      <%#--FLASH MESSAGES--------------------------------%>
      <%# use the nice alerts from bootstrap based on different cases %>
        <% if flash[:notice] %>
          <p class="alert alert-success"><%= flash[:notice] %></p>
        <% elsif flash[:alert] %>
          <p class="alert alert-danger"><%= flash[:alert] %></p>
        <% end %>

      <%#--PAGE CONTENT----------------------------------------%>
      <%= yield %>
  </div>


</body>
</html>
